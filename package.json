{
    "name": "dnd-beyond-dice-chrome-extension",
    "version": "1.0.0",
    "description": "A Chrome Extension that listens for dice rolls on D&D Beyond Character Sheets (e.g. [Remigius](https://www.dndbeyond.com/profile/kamnikite/characters/23934295)) and posts the results into a Discord server via a bot.",
    "main": "content.js",
    "scripts": {
        "dev": "webpack --watch --config webpack.config.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mazzola/dnd-beyond-dice-chrome-extension.git"
    },
    "author": "",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mazzola/dnd-beyond-dice-chrome-extension/issues"
    },
    "homepage": "https://github.com/mazzola/dnd-beyond-dice-chrome-extension#readme",
    "devDependencies": {
        "@babel/core": "^7.12.3",
        "@babel/preset-env": "^7.12.1",
        "@babel/preset-react": "^7.12.1",
        "babel-loader": "^8.1.0",
        "html-webpack-plugin": "^4.5.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.4.0",
        "prettier": "^2.1.2",
        "webpack": "^5.1.3",
        "webpack-cli": "^4.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,css,md}": "prettier --write"
    },
    "dependencies": {
        "react": "^16.14.0",
        "react-dom": "^16.14.0",
        "react-form": "^4.0.1"
    }
}
